<section id="article-edit">
	<h2>Edit article ...</h2>
	<%= form_for @post, url: admin_update_post_path, :html => { :multipart => true } do |post| %>
		<%= post.hidden_field :id %>
		<div class="form-group">
			<label>Author</label> <br />
			<%= post.text_field :author, class:"form-control", :value=>"Kalipay" %>
		</div>
		<div class="form-group">
			<label>Title</label> <br />
			<%= post.text_field :heading, class:"form-control" %>
		</div>
		<div class="form-group">
			<label>Upload Image</label> <br />
			<%= post.file_field :image%>
		</div>
		<div class="form-group">
			<%= post.label :remote_image_url, "or Paste image URL" %> <br />
			<%= post.text_field :remote_image_url%>
		</div>				
		<div class="form-group">
			<label>Content</label>	<br />
			<%= post.text_area :content %>
		</div>
		<div class="form-group">
			<%= post.submit "Update article ...", class:"btn btn-primary"  %>
		</div>	
	<% end %>
</section>
